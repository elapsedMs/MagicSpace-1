<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:gdq="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray">

    <RelativeLayout
        android:id="@+id/mine_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#765a8c">

        <TextView
            android:id="@+id/mine_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="笑笑"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_s"/>


        <storm.commonlib.common.view.RoundedImageView
            android:id="@+id/mine_ri_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_all_status"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mine_ri_avatar"
            android:layout_marginBottom="@dimen/distance_xxl"
            android:layout_marginTop="@dimen/distance_xxl"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等级"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xs"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xs"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金币"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xs"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xs"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xs"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xs"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mine_rl_advance"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/mine_rl_title"
        android:background="@color/white">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_rl_advance"
        android:layout_marginTop="@dimen/distance_xxl"
        android:orientation="vertical">

        <storm.commonlib.common.view.SimpleItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gdq:sv_name="我的作品"
            gdq:sv_style="style_have_arrow">
        </storm.commonlib.common.view.SimpleItemView>

        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <storm.commonlib.common.view.SimpleItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gdq:sv_name="我的收藏"
            gdq:sv_style="style_have_arrow">
        </storm.commonlib.common.view.SimpleItemView>

        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


        <storm.commonlib.common.view.SimpleItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gdq:sv_name="自制彩蛋"
            gdq:sv_style="style_have_arrow">
        </storm.commonlib.common.view.SimpleItemView>


        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


        <storm.commonlib.common.view.SimpleItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_xxl"
            gdq:sv_name="新手攻略"
            gdq:sv_style="style_have_arrow">
        </storm.commonlib.common.view.SimpleItemView>

        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>


    </LinearLayout>

</RelativeLayout>