<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:gravity="right"
            android:text="账号"/>

        <EditText
            android:id="@+id/et_phone_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:padding="@dimen/distance_l"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_size_xs"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/white"
            android:gravity="right"
            android:text="密码"/>

        <EditText
            android:id="@+id/et_register_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入密码"
            android:padding="@dimen/distance_l"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_size_xs"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@color/white"
            android:gravity="right"
            android:text="验证码"/>

        <EditText
            android:id="@+id/et_register_verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:padding="@dimen/distance_l"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/text_size_xs"/>

        <TextView
            android:id="@+id/bt_get_verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="获取验证码"
            android:textColor="@color/title_color"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="@dimen/px_620"
        android:layout_height="@dimen/px_80"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_96"
        android:background="@mipmap/btn_bg"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/px_32"/>

</LinearLayout>