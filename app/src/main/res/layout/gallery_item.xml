<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:makeramen="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

    >
    <!--    android:layout_marginLeft="@dimen/medtree_margins_c"
                 android:background="@drawable/bg_shadow"-->
    <com.medtree.client.libs.RoundedImageView
            android:id="@+id/gallery_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            makeramen:border_width="0dp"
            makeramen:corner_radius="5dip"
            android:src="@mipmap/ic_launcher"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_gallery_item">
        <TextView

                android:id="@+id/gallery_item_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24_px"

                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_23"
                android:layout_alignParentTop="true"
                android:visibility="gone"/>
        <!--android:background="@drawable/tv_bg_position"-->

        <TextView
                android:textSize="@dimen/text_size_24_px"
                android:id="@+id/gallery_item_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"

                android:visibility="gone"/>
        <!--android:background="@drawable/tv_bg_company"-->
    </RelativeLayout>
</FrameLayout>