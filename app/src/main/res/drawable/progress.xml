    <item android:id="@android:id/background">

        <shape>

            <corners android:radius="5dip" />

            <gradient
                android:angle="0"
                android:centerColor="#e8e8e8"
                android:centerY="0.75"
                android:endColor="#e8e8e8"
                android:startColor="#e8e8e8" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="#7b49cc"
                    android:centerY="0.75"
                    android:endColor="#7b49cc"
                    android:startColor="#7b49cc" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">

        <clip>

            <shape>

                <corners android:radius="5dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#7b49cc"
                    android:startColor="#7b49cc" />
            </shape>
        </clip>
    </item>

